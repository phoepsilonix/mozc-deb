+  if (pool_->policy() != GetSharedStatePolicy()) {
+    instance_->inputContextManager().foreach ([this](InputContext *ic) {
+      if (auto *state = this->mozcState(ic)) {
+        state->ReleaseClient();
+      }
+      return true;
+    });
+    pool_->setPolicy(GetSharedStatePolicy());
+  }
+}
