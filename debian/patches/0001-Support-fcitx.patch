+const char *GetKanaValue(const KanaMap &kana_map, uint32_t keyval,
+                         bool is_shift) {
+  KanaMap::const_iterator iter = kana_map.find(keyval);
+  if (iter == kana_map.end()) {
+    return nullptr;
+  }
+  return (is_shift) ? iter->second.second : iter->second.first;
+}
