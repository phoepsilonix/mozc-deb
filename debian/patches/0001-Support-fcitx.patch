+    {'M', {"", ""}},
+    {',', {"", ""}},
+    {'<', {"", ""}},
+    {'.', {"", ""}},
+    {'>', {"", ""}},
+    {'/', {"", ""}},
+    {'?', {"", ""}},
+    {'_', {"", ""}},
+    // A backslash is handled in a special way because it is input by
+    // two different keys (the one next to Backslash and the one next
+    // to Right Shift).
+    {'\\', {"", ""}},
+    {U'', {"", ""}},  // U+00A5
+});
+
+const KanaMap *kKanaUsMap = new KanaMap({
+    {'`', {"", ""}},  {'~', {"", ""}},  {'1', {"", ""}},
+    {'!', {"", ""}},  {'2', {"", ""}},  {'@', {"", ""}},
+    {'3', {"", ""}},  {'#', {"", ""}},  {'4', {"", ""}},
+    {'$', {"", ""}},  {'5', {"", ""}},  {'%', {"", ""}},
+    {'6', {"", ""}},  {'^', {"", ""}},  {'7', {"", ""}},
+    {'&', {"", ""}},  {'8', {"", ""}},  {'*', {"", ""}},
+    {'9', {"", ""}},  {'(', {"", ""}},  {'0', {"", ""}},
+    {')', {"", ""}},  {'-', {"", ""}},  {'_', {"", ""}},
+    {'=', {"", ""}},  {'+', {"", ""}},  {'q', {"", ""}},
+    {'Q', {"", ""}},  {'w', {"", ""}},  {'W', {"", ""}},
+    {'e', {"", ""}},  {'E', {"", ""}},  {'r', {"", ""}},
+    {'R', {"", ""}},  {'t', {"", ""}},  {'T', {"", ""}},
+    {'y', {"", ""}},  {'Y', {"", ""}},  {'u', {"", ""}},
+    {'U', {"", ""}},  {'i', {"", ""}},  {'I', {"", ""}},
+    {'o', {"", ""}},  {'O', {"", ""}},  {'p', {"", ""}},
+    {'P', {"", ""}},  {'[', {"", ""}},  {'{', {"", ""}},
+    {']', {"", ""}},  {'}', {"", ""}},  {'\\', {"", ""}},
+    {'|', {"", ""}},  {'a', {"", ""}},  {'A', {"", ""}},
+    {'s', {"", ""}},  {'S', {"", ""}},  {'d', {"", ""}},
+    {'D', {"", ""}},  {'f', {"", ""}},  {'F', {"", ""}},
+    {'g', {"", ""}},  {'G', {"", ""}},  {'h', {"", ""}},
+    {'H', {"", ""}},  {'j', {"", ""}},  {'J', {"", ""}},
+    {'k', {"", ""}},  {'K', {"", ""}},  {'l', {"", ""}},
+    {'L', {"", ""}},  {';', {"", ""}},  {':', {"", ""}},
+    {'\'', {"", ""}}, {'\"', {"", ""}}, {'z', {"", ""}},
+    {'Z', {"", ""}},  {'x', {"", ""}},  {'X', {"", ""}},
+    {'c', {"", ""}},  {'C', {"", ""}},  {'v', {"", ""}},
+    {'V', {"", ""}},  {'b', {"", ""}},  {'B', {"", ""}},
+    {'n', {"", ""}},  {'N', {"", ""}},  {'m', {"", ""}},
